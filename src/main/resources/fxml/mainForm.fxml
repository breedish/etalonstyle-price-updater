<MigPane fx:id="rootPane" cols="[left][left, :370:][left]" layout="insets 20" styleClass="main-panel"
         xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
         fx:controller="com.breedish.etalonstyle.ui.MainFormController">
    <Label text="%form.file.price.path" MigPane.cc="span3, wrap"/>
    <TextField fx:id="priceFile" styleClass="text-field" MigPane.cc="span 2, width :500:"/>
    <Button fx:id="priceButton" styleClass="button" text="%form.choose.file.excel" MigPane.cc="wrap, width :200:"/>

    <Label text="%form.file.db.path" MigPane.cc="span 3, wrap"/>
    <TextField fx:id="dbFile" styleClass="text-field" MigPane.cc="span 2, width :500:"/>
    <Button fx:id="dbButton" styleClass="button" text="%form.choose.file.db" MigPane.cc="wrap, width :200:"/>

    <Label text="%update.options" MigPane.cc="span 3, grow, width 680:680:680, wrap"/>
    <FlowPane styleClass="flowpane" fx:id="optionsPane" hgap="5.0" prefWidth="708.0" vgap="5.0" MigPane.cc="span 3, wrap">
    </FlowPane>

    <Label text="%updateProgress" MigPane.cc="gaptop 5, growx, width 130!" alignment="TOP_CENTER" textAlignment="CENTER"/>
    <Text fx:id="progressDetails" MigPane.cc="gaptop 5, wrap"/>
    <ProgressBar fx:id="updateProgress" MigPane.cc="span 3, wrap 2, height 30!, grow, width 680!"/>
    <Button onAction="#update" styleClass="button" text="%form.run-update" MigPane.cc="span 3, height 50!, gaptop 10, growx, growy"/>
</MigPane>
